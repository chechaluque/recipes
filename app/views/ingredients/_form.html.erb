<%= form_for(@ingredient, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :name %>
    </div>
    <div class="col-md-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter your ingredient Name", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-10 col-md-offset-2">
        <%= f.submit(@ingredient.new_record? ? "Add Ingredient" : "Update Ingredient" , class: "btn btn-primary btn-lg btn-xlarge") %>
    </div>
  </div>

  <div class="col-md-4 col-md-offset-4 colormatch">
    [ <%= link_to "Cancel request and return to ingredients listing", ingredients_path %> ]
  </div>

<% end %>
